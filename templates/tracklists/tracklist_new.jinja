{% extends 'base.jinja' %} {% block content %}
    <form action="/traxstax/{{ user.id }}/tracklists" method="POST">
        <label for="title">Tracklist Title</label>
        <input type="text" name="title" id="title">
        <label for="cover_image">Cover Image</label>
        <input type="text" name="cover_image" id="cover_image">
        <label for="public">Public</label>
        <input type="radio" name="private_public" id="public" value="True">
        <label for="private">Private</label>
        <input type="radio" name="private_public" id="private" value="False">
        <label for="songs">Add Tracks</label>
        <button type="submit">Create Tracklist</button>
    </form>
{% endblock %}